<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"

    tools:context="neosoft.training.neostore.view.order.activity.MyOrderActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/twenty"

        >

        <TextView

            android:id="@+id/orderId"
            style="@style/OrderID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/toolbarId"
            android:layout_marginBottom="@dimen/twenty"
            android:layout_marginStart="@dimen/thirteen"
            android:layout_marginTop="@dimen/twenty"
            android:text="Order ID"

            />

        <View
            android:layout_width="120dp"
            android:layout_height="2dp"
            android:layout_alignEnd="@id/orderDateValue"
            android:layout_alignStart="@+id/orderId"
            android:layout_below="@+id/orderIDValue"
            android:layout_marginTop="9dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/orderDate"
            style="@style/OrderDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/orderId"
            android:layout_below="@+id/orderId"
            android:text="Order Date"

            />

        <TextView
            android:id="@+id/orderIDValue"
            style="@style/OrderID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/orderId"
            android:layout_marginLeft="@dimen/five"
            android:layout_toEndOf="@+id/orderId"
            android:text="Order ID"

            />

        <TextView
            android:id="@+id/orderDateValue"
            style="@style/OrderDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/orderId"
            android:layout_marginLeft="@dimen/five"
            android:layout_toEndOf="@+id/orderDate"
            android:text="date Value"

            />

        <TextView
            android:id="@+id/orderPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/orderDateValue"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="28dp"
            android:text="Price"
            android:textColor="@color/colorOrderPrice"
            android:textSize="@dimen/twenty"

            />
    </RelativeLayout>

</RelativeLayout>







