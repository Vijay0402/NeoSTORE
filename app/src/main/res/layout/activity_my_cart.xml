<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"

    tools:context="neosoft.training.neostore.view.order.activity.OrderIdActivity">

    <include layout="@layout/toolbar"
        />

    <include layout="@layout/recycler_view"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/twentyFour"
        android:layout_marginLeft="@dimen/fifteen"
        android:layout_marginRight="@dimen/fifteen"
        android:layout_marginBottom="@dimen/twentyFour"
        android:weightSum="3"
        >
        <TextView
            android:id="@+id/cartTotalId"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="TOTAL"
            style="@style/Price"
            android:gravity="start"
            android:layout_marginStart="@dimen/ten"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/cartTotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs. Price"
            style="@style/Price"
            android:gravity="end"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/twentyFour"
            />



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider"
        />

    <Button
        android:id="@+id/btnOrderNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/order_now"
        style="@style/btnSaveAddress"
        android:layout_marginTop="@dimen/thirtyThree"
        android:layout_gravity="center_horizontal"

        />
</LinearLayout>
