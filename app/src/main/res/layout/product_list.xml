<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/productListRecycler"
    android:layout_width="match_parent"
    android:layout_height="@dimen/hundredTen"
    android:fitsSystemWindows="true"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <ImageView

            android:id="@+id/imgProductList"
            android:layout_width="@dimen/seventySeven"
            android:layout_height="@dimen/eightyThree"
            android:src="@drawable/chairsicon"
            android:scaleType="centerCrop"
            android:layout_marginLeft="@dimen/thirteen"
            android:layout_marginTop="@dimen/thirteen"
            android:layout_marginRight="@dimen/thirteen"

            />
        <LinearLayout
           android:layout_marginRight="@dimen/thirteen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            
            >
        <TextView
            android:layout_marginTop="@dimen/fourteen"
            android:id="@+id/txtProducListName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/txtProductListName"

            />

        <TextView
            android:id="@+id/txtProductListDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_search_title"
            style="@style/txtProductDescription"
            android:layout_marginTop="5dp"

            />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                >

          <TextView
            android:id="@+id/txtProductListPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/txtProductPrice"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/RatingBar"
                android:isIndicator="true"

                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="9dp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


    </LinearLayout>