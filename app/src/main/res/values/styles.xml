<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>

    </style>
    <style name="edtLogUsername">
        <item name="android:background">@drawable/drawable_username</item>
        <item name="android:hint">@string/login_username</item>
        <item name="android:textSize">@dimen/main_forget_password</item>

        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:drawablePadding">10dp</item>

                
    </style>
    <style name="edtLogPassword">
        <item name="android:hint">@string/login_password</item>
        <item name="android:textSize">@dimen/main_login_password</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:background">@drawable/drawable_username</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        
    </style>
    <style name="btnLogin">
        <item name="android:textSize">@dimen/main_login_button</item>
        <item name="android:textColor">@color/colorRed</item>
        <item name="android:background">@drawable/drawable_button</item>
        
    </style>
    <style name="txtAccount">
      <item name="android:textSize">@dimen/sixteen</item>
      <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="tlbarRegistration">
      <item name="android:elevation">4dp</item>
      <item name="android:background">@color/color_tlbarRegistration</item>
      <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
      <item name="android:popupTheme">@style/Theme.AppCompat.Light</item>

    </style>
    <style name="txtGender">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/eighteen</item>

    </style>
    <style name="txtMaleFemale">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/sixteen</item>

    </style>
    <style name="txtProductListName">
        <item name="android:textColor">@color/black_color_text</item>
        <item name="android:textSize">@dimen/fifteen</item>

    </style>
    <style name="txtProductDescription">
        <item name="android:textColor">@color/color_grey</item>
        <item name="android:textSize">@dimen/ten</item>
    </style>

    <style name="txtProductPrice">
        <item name="android:textColor">@color/colorRed</item>
        <item name="android:textSize">@dimen/twenty</item>

        <item name="android:text">@string/product_price</item>
    </style>

    <style name="txtAddress_id">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">@dimen/seventeen</item>
        <item name="android:layout_marginTop">@dimen/twentyseven</item>

    </style>

    <style name="edtCity">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">@dimen/fourteen</item>
        <item name="android:layout_marginTop">@dimen/seventeen</item>
        <item name="android:background">@drawable/draw_address_editfield</item>

    </style>

    <style name="edtAddressMargin">
      <item name="android:layout_marginTop">@dimen/seventeen</item>

    </style>

    <style name="btnSaveAddress">

        <item name="android:textSize">@dimen/main_login_button</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/draw_btn_save_address</item>

    </style>

    <style name="RatingBar" parent="@style/Base.Widget.AppCompat.RatingBar.Small">
        <item name="android:width">@dimen/sixty</item>
        <item name="android:height">@dimen/eleven</item>
        <item name="android:numStars">5</item>
         <item name="android:progressTint">@color/yellow</item>
        <item name="android:stepSize">0.1</item>

    </style>

    <style name="txtDescription" >
       <item name="android:textColor">@color/colorDescription</item>
        <item name="android:textSize">@dimen/ten</item>

    </style>

    <style name="txtDescriptionText" >
        <item name="android:textColor">@color/colorDescriptionText</item>
        <item name="android:textSize">@dimen/ten</item>

    </style>
    <style name="btnRateProductDetail">

        <item name="android:textSize">@dimen/main_login_button</item>
        <item name="android:textColor">@color/color_grey</item>
        <item name="android:background">@drawable/draw_rate_button</item>

    </style>
    <style name="txtAddressListShipping">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">@dimen/twentyTwo</item>
        <item name="android:layout_marginTop">@dimen/twelve</item>
        <item name="android:layout_marginBottom">@dimen/twelve</item>

    </style>
    <style name="txtAddressListDescription">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">@dimen/fifteen</item>
        <item name="android:layout_marginTop">@dimen/twelve</item>
        <item name="android:layout_marginBottom">@dimen/twelve</item>

    </style>



</resources>
